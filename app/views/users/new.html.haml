!!!5
%html{:lang => "it"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SignUp Inline
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %link{:crossorigin => "anonymous", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css", :integrity => "sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ", :rel => "stylesheet"}/
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"}
    %script{:crossorigin => "anonymous", :integrity => "sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn", :src => "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"}
  %body
    .container-fluid{:style => "padding-left:10%;padding-right:10%;"}
      .row
        .col-lg-6{:style => "margin-top:5%"}
          %center>
            %h3 Login
            %br/
            %form{:action => "", :method => "post", :name => "login", :style => "width:60%"}
              .form-group
                %h3 Email
                %input.form-control{:name => "email", :placeholder => "prova@example.com", :required => "", :type => "email"}/
              .form-group
                %h3 Password
                %input.form-control{:name => "password", :required => "", :type => "password"}/
              %input.btn.btn-sm.btn-success{:type => "submit", :value => "Invia"}/
              %input.btn.btn-sm.btn-danger{:type => "reset", :value => "Reset"}/
          c
        .col-lg-6{:style => "margin-top:5%"}
          %center
            %h3 SignUp
            %br/
            = form_for(@user) do |f|
              = render 'shared/error_messages'
              .form-group
                %h3 Username
                %input.form-control{:maxlength => "20",:id => "user_username", :name => "user[username]", :required => "", :type => "username"}/
              .form-group
                %h3 Email
                %input.form-control{:maxlength => "50",:id => "user_email", :name => "user[email]", :placeholder => "prova@example.com", :required => "", :type => "email"}/
              .form-group
                %h3 Password
                %input.form-control{:maxlength => "30",:id => "user_password", :name => "user[password]", :required => "", :type => "password"}/
              .form-group
                %h3 Password Confirmation
                %input.form-control{:maxlength => "30",:id => "user_passwordconfirmation", :name => "user[passwor_confirmation]", :required => "", :type => "password"}/
              %input.btn.btn-sm.btn-success{:type => "submit", :value => "Invia"}/
              %input.btn.btn-sm.btn-danger{:type => "reset", :value => "Reset"}/
