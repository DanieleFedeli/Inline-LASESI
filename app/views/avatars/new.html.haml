= form_for @avatar, html: { multipart: true } do |f|
  - if @avatar.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@avatar.errors.count, "error")} prohibited this photo from being saved:"
      %ul
        - @avatar.errors.full_messages.each do |msg|
          %li
            = msg
  .form-group
    = f.label :image
    = f.file_field :image, class: 'form-control'
  .form-group
    = f.submit 'Upload Photo', class: 'btn btn-default'